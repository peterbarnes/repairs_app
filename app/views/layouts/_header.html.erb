<div class="navbar navbar-static-top">
	<div class="navbar-inner">
		<%= link_to "Repairs", root_path, class: "brand" %>
		<ul class="nav">
			<li><%= link_to "Help", help_path %></li>
			<li><%= link_to "About", about_path %></li>
			<% if signed_in? %>
			<li><%= link_to "Active", repairs_path %></li>
			<li id="fat-menu" class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					Account <b class="caret"></b>
				</a>
				<ul class="dropdown-menu">
					<li><%= link_to current_user do %>
						<i class="fa fa-user"> Profile</i>
						<% end %>
					</li>
					<li><%= link_to edit_user_path(current_user) do %>
						<i class="fa fa-cogs"> Settings</i>
						<% end %>
					</li>
					<li class="divider"></li>
					<li><%= link_to signout_path, method: 'delete' do %>
						<i class="fa fa-sign-out"> Sign out</i>
						<% end %>
					</li>
				</ul>
			</li>
			<% else %>
			<li><%= link_to "Sign in", signin_path %></li>
			<% end %>
		</ul>
	</div>
</div>