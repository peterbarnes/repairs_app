<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4 well well-large">
    <section>
      <div class="picture">
      	<%= gravatar_for @user %>
      </div>
      <div class="info">
      	<ul>
      		<li><h3><i class="fa fa-user"></i> <%= @user.name %></h3></li>
      		<li><i class="fa fa-envelope"></i> <%= @user.email %></li>
      		<li><i class="fa fa-wrench"></i> Repairs: <%= @user.repairs.count %></li>
      	</ul>
      </div>
    </section>
  </aside>
  <aside class="span6 well well-large repairstable table-striped">
  	<h3 class="pull-left"><i class="fa fa-wrench"></i> Repairs</h3>
  	<a href="/repairs/new" class="btn btn-large btn-primary pull-right"><i class="fa fa-plus"></i> Create repair</a>
  		<table class="table">
		<thead>
			<tr>
				<th>Customer</th>
				<th>Item</th>
				<th>Created on</th>
			</tr>
		</thead>
		<tbody>
			<% @user.repairs.each do |repair| %>
				<tr>
					<td><%= repair.customer.truncate(20) %></td>
					<td><%= repair.item.truncate(20) %></td>
					<td><%= time_tag(repair.created_at, :format =>'%B %d, %Y') %></td>
					<td>
						<%= link_to repair do %>
							<i class="fa fa-eye"></i>
						<% end %>
						|
						<%= link_to edit_repair_path(repair) do %>
							<i class="fa fa-pencil-square-o"></i>
						<% end %>

					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
  </aside>
</div>
