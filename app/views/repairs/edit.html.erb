<% provide(:title, "Edit repair") %>
<h1><i class="fa fa-pencil-square-o"></i> Edit repair</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@repair) do |f| %>

			<%= f.label :customer %>
			<%= f.text_field :customer %>

			<%= f.label "Contact information" %>
			<%= f.text_field :contact %>

			<%= f.label :item %>
			<%= f.text_field :item %>

			<%= f.label "Serial number" %>
			<%= f.text_field :item_serial %>

			<%= f.label :symptoms %>
			<%= f.text_area :symptoms %>

			<%= f.label :notes %>
			<%= f.text_area :notes %>

			<%= f.hidden_field :user_id %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>